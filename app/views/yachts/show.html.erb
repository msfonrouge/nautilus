<div class="container shadow mt-3 p-2 mb-3">
  <div class="card">
    <div class="row g-0">
      <div class="col-md-5 zoom-effect">
        <%= cl_image_tag @yacht.photo.key, height: 300, width: 600, crop: :fill, class:"card-img-top"%>
      </div>
      <div class="col-md-3">
        <div class="card-body ">
          <h1> <%= @yacht.name %> </h1>
          <p><i class="fa-regular fa-money-bill-1"></i> $<%= @yacht.price %></p>
          <p><i class="fa-solid fa-person"></i><%= @yacht.capacity %></p>
          <% if current_user && @yacht.user_id == current_user.id %>
          <%= link_to "Editar", edit_yacht_path(@yacht.id), class:"btn btn-warning btn-sm" %>
          <%= link_to "Eliminar", yacht_path(@yacht.id),
          data: {turbo_method: :delete, turbo_confirm: "Â¿EstÃ¡s seguro de que quieres borrar este yacht?"}, class:"btn btn-danger btn-sm" %>
          <% else %>
          <%= link_to "Alquilar", new_yacht_booking_path(@yacht.id), class:"btn btn-info btn-sm" %>
          <% end %>
          <%= link_to "Volver", :back, class:"btn btn-primary btn-sm" %>
        </div>
      </div>
      <div class="col-md-4">
          <h2 class="my-3">Equipments of the sailboat</h2>
          <%= render "details" %>
      </div>
    </div>
  </div>
</div>

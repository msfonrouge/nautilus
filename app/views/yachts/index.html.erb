<div class="container mt-3">
  <div class="row">
    <div class="col">
      <%= link_to "Crear yacht", new_yacht_path, class:"btn btn-primary" %>
    </div>
  </div>
  <hr>
    <div class="row d-flex">
      <p>All Yachts</p>
      <% @yachts.each do |yacht| %>
        <div class="col-4 mb-3">
          <div class="card">
          <%= cl_image_tag yacht.photo.key, height: 300, width: 400, crop: :fill, class:"card-img-top"%>
            <div class="card-body">
                <h5 class="card-title"><%= yacht.name %> </h5>
                <p class="card-text"> <%= yacht.price %></p>
                <p class="card-text"> <%= yacht.capacity %></p>
                <%= link_to "Ver detalles", yacht_path(yacht.id), class:"btn btn-info" %>
                <%= link_to "New Booking", new_yacht_booking_path(yacht.id), class:"btn btn-info" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
</div>
